@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
    @Html.AntiForgeryToken()

    <ul class="navbar-nav ml-auto">
        <li class="nav-link"><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <form>
        @Html.AntiForgeryToken()
        <ul class="navbar-nav ml-auto fixed">
            <li class="nav-item"><a class="nav-link" id="loginLink" href="@Url.Action("Login", "Account", routeValues: null)">Log in</a></li>
        </ul>
    </form>
}

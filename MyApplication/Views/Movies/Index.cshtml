@model System.Collections.Generic.IEnumerable<MyApplication.Core.Models.Movie>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p style="padding-top:40px"></p>
@Html.ActionLink("Add Movie", "New", "Movies", null, new { @class = "btn btn-primary" })
<p style="padding-top:10px"></p>
<table id="movies" class="table table-bordered" table-hover>
    <thead>
        <tr>
            <th>Title</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>



@section scripts
{

    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable({
                "language": {
                    "emptyTable": "Movies list is empty"
                },
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "title"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-movie-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            $("#movies").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this movie?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/movies/" + button.attr("data-movie-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
    </script>
}
